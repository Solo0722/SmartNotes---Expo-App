{
  "expo": {
    "name": "Smart-Note",
    "slug": "Smartly store all your notes.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/android/mipmap-hdpi/ic_launcher.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash-screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#fff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/android/mipmap-mdpi/ic_launcher.png",
        "backgroundColor": "#fff"
      }
    },
    "web": {
      "favicon": "./assets/android/mipmap-mdpi/ic_launcher.png"
    }
  }
}
